<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :overview %>
    <%= f.association :type, as: :radio_buttons %>
  <% if @job.user == current_user %>
      <%= f.input :filled %>
  <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

